<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<fx:root styleClass="counter" stylesheets="@styles.css,@../styles.css" type="HBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
	   <Button minHeight="49.0" minWidth="49.0" onAction="#onDecrease" styleClass="imat-button,minus" text="-" HBox.hgrow="NEVER"/>
      <AnchorPane prefHeight="50.0" HBox.hgrow="ALWAYS">
         <children>
      	   <TextField fx:id="amountTextField" alignment="CENTER_RIGHT" onAction="#readTextValue" styleClass="field" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
            <Label fx:id="unitLabel" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <padding>
                  <Insets left="2.0" right="3.0" />
               </padding>
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
	   <Button minHeight="49.0" minWidth="49.0" onAction="#onIncrease" styleClass="imat-button,plus" text="+" HBox.hgrow="NEVER"/>
   </children>
</fx:root>
