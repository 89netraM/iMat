<?import javafx.geometry.Insets?>
<fx:root stylesheets="@../styles.css" type="AnchorPane" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
	<padding>
		<Insets top="2.5" bottom="2.5"/>
	</padding>

	<HBox alignment="CENTER_LEFT" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
		<Label fx:id="name"/>
	</HBox>
	<HBox alignment="CENTER_RIGHT" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="80">
		<Label fx:id="amount"/>
	</HBox>
	<HBox alignment="CENTER_RIGHT" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="0">
		<Label fx:id="total"/>
	</HBox>
</fx:root>
