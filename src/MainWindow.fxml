<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import ProductCounter.ProductCounterComponent?>

<AnchorPane xmlns="http://javafx.com/javafx"
			xmlns:fx="http://javafx.com/fxml"
			fx:controller="MainWindow"
			prefHeight="400.0" prefWidth="600.0">
	<children>
		<Button text="-" onAction="#minus" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"/>
		<Button text="+" onAction="#plus" AnchorPane.topAnchor="50" AnchorPane.leftAnchor="0"/>
		<Button text="Load Product" onAction="#load" AnchorPane.topAnchor="100" AnchorPane.leftAnchor="0"/>
		<ProductCounterComponent fx:id="counter" prefWidth="150" AnchorPane.leftAnchor="0" AnchorPane.bottomAnchor="0"/>
	</children>
</AnchorPane>
